
<form action="/myblog/<%= @specific_post.id %>" method="post">
  <input type="hidden" name="_method" value="PUT" class="newpostform">
    <div class="col-md-6 title createpost">
    	<label for="validationCustom01">Title</label>
            <input type="text" class="form-control"  name="title" class="titleinput" value="<%= @specific_post.title %>">
    </div>
    <div class="col-md-6 createpost">
      <textarea type="text" class="form-control" name="body" class="postinput" id="summernote"><%= @specific_post.body %></textarea>
    </div>
    <div class="form-group col-md-6 date">
    	<label>Date</label>
      <input type="text" class="form-control"  name="date" class="dateinput"  value="<%= @specific_post.date %>">
    </div>


  <form action="/myblog/<%= @specific_post.id %>/edit" method="post">
    <input type="hidden" name="_method" value="PUT">
    <button class="btn btn-primary publish" type="submit">Publish</button>
</form>

