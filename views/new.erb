
<div class="container newpost">
<form method="POST" action="/new" class="newpostform">
    <div class="col-md-6 title createpost">
    	<label for="validationCustom01">Title</label>
      <input type="text" class="form-control" name="title" placeholder="Title" class="titleinput">
    </div>
    <div class="col-md-6 createpost">
      <textarea type="text" class="form-control" name="body" class="postinput" id="summernote"></textarea>
      <!-- <p><br></p> -->
    </div>
    <div class="form-group col-md-6 date">
    	<label>Date</label>
      <input type="text" class="form-control"  name="date"  placeholder="yyyy-mm-dd" class="dateinput">
    </div>
  <button class="btn btn-primary publish" type="submit">Publish</button>
</form>
</div>



